<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<ScrollView
        android:background="@android:color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navigation">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                style="@style/question_style"
                android:text="@string/true_false"
                android:layout_marginTop="30dp"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/txt_question1"
                style="@style/question_style"
                android:text="@string/question1"/>
        <RadioGroup
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/design_default_color_primary_dark">
            <RadioButton
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/_true"/>
            <RadioButton
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/_false" android:visibility="visible"/>
        </RadioGroup>



        <TextView
                style="@style/question_style"
                android:text="@string/true_false"
                android:layout_marginTop="30dp"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/txt_question2"
                style="@style/question_style"
                android:text="@string/question2"/>
        <RadioGroup
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/design_default_color_primary_dark">
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_true"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_false" android:visibility="visible"/>
        </RadioGroup>

        <TextView
                style="@style/question_style"
                android:text="@string/true_false"
                android:layout_marginTop="30dp"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/txt_question3"
                style="@style/question_style"
                android:text="@string/question3"
                 />
        <RadioGroup
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/design_default_color_primary_dark">
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_true"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_false" android:visibility="visible"/>
        </RadioGroup>

        <TextView
                style="@style/question_style"
                android:text="@string/true_false"
                android:layout_marginTop="30dp"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/txt_question4"
                style="@style/question_style"
                android:text="@string/question4"/>
        <RadioGroup
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/design_default_color_primary_dark">
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_true"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_false" android:visibility="visible"/>
        </RadioGroup>

        <TextView
                style="@style/question_style"
                android:text="@string/true_false"
                android:textStyle="bold"
                android:layout_marginTop="30dp"/>
        <TextView
                android:id="@+id/txt_question5"
                style="@style/question_style"
                android:text="@string/question5"/>
        <RadioGroup
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/design_default_color_primary_dark">
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_true"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_false" android:visibility="visible"/>
        </RadioGroup>

        <Button
                android:id="@+id/btn_submit_survey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>


        <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="start"
                android:background="@color/design_default_color_primary_dark"
                app:menu="@menu/bottom_navigation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
