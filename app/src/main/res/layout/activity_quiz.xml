<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/txt_question1"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:text="@string/question1"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="344dp"
            android:layout_marginRight="344dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

    <TextView
            android:id="@+id/txt_question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question2"
            app:layout_constraintTop_toBottomOf="@+id/txt_question1"

            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="344dp"
            android:layout_marginRight="344dp"/>

    <TextView
            android:id="@+id/txt_question3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question3"
            app:layout_constraintTop_toBottomOf="@+id/txt_question2"

            android:layout_marginEnd="344dp"
            android:layout_marginRight="344dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"/>

    <TextView
            android:id="@+id/txt_question4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question4"
            app:layout_constraintTop_toBottomOf="@+id/txt_question3"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="344dp"
            android:layout_marginRight="344dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>
    <TextView
            android:id="@+id/txt_question5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question5"
            app:layout_constraintTop_toBottomOf="@+id/txt_question4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="344dp"
            android:layout_marginRight="344dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.046"/>

    <Button
            android:id="@+id/btn_submit_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txt_question5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>

